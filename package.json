{
  "name": "@revfanc/use",
  "version": "1.0.22",
  "description": "A collection of Vue 3 Composition API utilities",
  "author": "revfanc",
  "license": "MIT",
  "homepage": "https://revfanc.github.io/use",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revfanc/use.git"
  },
  "bugs": {
    "url": "https://github.com/revfanc/use/issues"
  },
  "keywords": [
    "vue",
    "vue3",
    "composables",
    "composition-api"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "dev:example": "cd examples && vite",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.36.0",
    "eslint-plugin-format": "^1.0.1",
    "happy-dom": "^17.4.4",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.1",
    "vue": "^3.3.0",
    "vue-tsc": "^2.2.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged --no-stash"
  },
  "lint-staged": {
    "*": "eslint"
  }
}
